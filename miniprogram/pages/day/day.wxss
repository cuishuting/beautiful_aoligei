/* pages/day/day.wxss */
.size{
  font-size:large;
}
.text{
  font-size: medium;
}
.position{
  position:absolute;
  right: 8px;
   left: auto;
   top: -2px;
}
.xl{
  font-size: xx-large;
}
.style{
  font-weight:bold; 
  font-family: "幼圆";
  font-size: x-large;
}
view{
  box-sizing: border-box;
}
.item-box{
  width: 100%;
  margin: 0auto;
}
.items{
  width: 100%;
}
.item{
  position: relative;
  border-top: 2rpx solid#eee;
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
   
}
.item:last-child{
  border-bottom: 2rpx solid#eee;
}
.inner{
  position: absolute;
  top:0;
}
.inner.txt{
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding:010rpx;
  transition: left0.2s ease-in-out;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  display: inline;
}
.inner.del{
  background-color: #e64340;
  width: 180rpx;text-align: center;
  z-index: 4;
  right: 0;
  color: #fff
}
.item-icon{
  width: 64rpx;
  vertical-align: middle;
  margin-right: 16rpx
}
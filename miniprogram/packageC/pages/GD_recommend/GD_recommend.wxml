<scroll-view scroll-x class="bg-black light nav text-center">
	<view class="cu-item {{0==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="0">
		<text class="cuIcon-favor lg" bindtap="facialFoam">洗面奶</text>
	</view>
	<view class="cu-item {{1==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="1" > 
		<text class="cuIcon-discover lg" bindtap="eyeCream" >眼霜</text> 
	</view>
	<view class="cu-item {{2==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="2">
		<text class="cuIcon-like lg" bindtap="Essence">精华</text> 
	</view>
	<view class="cu-item {{3==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="3">
		<text class="cuIcon-evaluate lg" bindtap="Lotion">爽肤水</text> 
	</view>
	<view class="cu-item {{4==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="4">
		<text class="cuIcon-evaluate lg" bindtap="Emulsion">乳液</text> 
	</view>
</scroll-view>
<view wx:for="{{list0}}" class="item" class="cu-list menu-avatar"  wx:if="{{TabCur==0}}">
	<view class="cu-item">
		<view class="cu-avatar lg" style="background-image:url({{item.picture}});">
			<view class="content">
				<view class="text-black">{{item.name}}</view>
			</view>
		</view>
		<view class="action">
			<view class="solid-bottom text-xl">
				<text class="text-price text-black">{{item.cost}}</text>
			</view>
		</view>
	</view>
</view>
